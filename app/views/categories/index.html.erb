<section id="categoriesIndex" class="container-fluid d-flex flex-column bg-dark">
  <section id="categoriesTitle" class="row px-4 my-auto">
    <div class=" name col-10 offset-1 text-center">
      <span class=" text-white  text-uppercase ">Challenges</span>
    </div>
  </section>
</section>
<section id="categoriesContent" class="container-fluid h-100 d-flex page-content flex-column bg-white">
  <div class="row">
    <div class="col-12 text-center div-button">
      <button class="button-homepage"><%= link_to "Challenges", challenges_path %></button>
    </div>
  </div>
  <div class="row">
    <div class="col-12 text-center div-button">
      <button class="button-homepage"><%= link_to "Quiz", new_answer_path %></button>
    </div>
  </div>
  <div class="row">
    <div class="col-12">
      <div class="card-columns">
        <% @categories.each do |category| %>
          
          <%= link_to category_path(category) do %>
            <div class="card-homepage">
              <%= cl_image_tag('Velo_npexj9', class: "card-img") %>
              <div class="title">
                <h3><%= category.name %></h3>
              </div>
              <div class="info">
              
              </div>
            </div>
          <% end %>

        <% end %><!-- Fin Category Each  !-->
      </div>
    </div>
  </div>
</section>
