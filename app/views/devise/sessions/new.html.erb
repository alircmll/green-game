<section id="firstScreen" class="container-fluid h-100 d-flex min-height-container flex-column">
  <div class="row">
    <div class="logo col-12 text-center py-4">
      <%= image_tag 'logo/logo.png' %>
    </div>
  </div>
  <div class="row h-75">
    <div class="col-12 ">
      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-inputs">
          <%= f.input :email,
                required: true,
                autofocus: true,
                label: false,
                placeholder: 'user@domain.com',
                input_html: { autocomplete: "email" } 
                %>
          <%= f.input :password,
                required: true,
                label: false,
                placeholder: 'Password',
                input_html: { autocomplete: "current-password" } 
                %>
        </div>
        <div class="form-actions btn-home">
          <%= f.button :submit, "Log in", class: "btn btn-primary" %>
        </div>
      <% end %>
    </div>
  </div>
  <div class="row h-25">
    <div class="col-12 text-center d-flex align-items-end align-content-center pb-4 ">
      <small class="text-white">Don't have an account ? <%= link_to 'Sign up', new_user_registration_path %></small>
    </div>
  </div>
</section>

