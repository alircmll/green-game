<section id="challenges" class="container-fluid d-flex flex-column bg-dark">
<%= render 'shared/topnav' %>
<div class="flipcontainer">
  <h1 class="text-center">Quiz</h1>
  <p class="flipscore text-left"><%= "Score : #{@party_quiz.party_points}" %></p>
  <%= simple_form_for [@party_quiz, @answer] do |f| %>

    <div class="flipcard">
      <div class="front flipcontent">
        <div class="wrapper">
          <div class="count text-right">
            <%= "Question : #{@party_quiz.position_in_quiz+1}/#{@party_quiz.quiz.questions.count}" %>
          </div>
          <div class="question d-flex align-items-center">
            <%= @question.title %>
          </div>
          
          <%= f.input :option_id,
                          :label => '',
                          :collection => @options,
                          :as => :radio_buttons,
                          :label_method => :last,
                          :value_method => :first,
                          :input_html => { :class => 'radio' },
                          :item_wrapper_tag => :label,
                          :item_wrapper_class => 'btn btn-primary',
                          :collection_wrapper_tag => :div,
                          :collection_wrapper_class => 'options text-center'%>
          </div>
        </div>
        <div class="back flipcontent">
          <div class="wrapper">
            <div class="question d-flex align-items-center justify-content-center">
              <img id="badresult" src="<%= asset_path('bad.jpg') %>" alt="" >
              <img id="goodresult" src="<%= asset_path('valid.jpg') %>" alt="" >
            </div>
            <p><%= @question.details %></p>
            <a href="<%= @question.link %>" target="_blank">More informations...</a>
            <div class="options text-center">
            <input type="hidden" id="goodOption" value=<%= @good_option %> />
            <% label_button = (@party_quiz.position_in_quiz+1==5) ? "Quiz terminÃ© !" : "Question suivante" %>
            <%= f.submit label_button, class: "btn btn-primary" %>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</section>