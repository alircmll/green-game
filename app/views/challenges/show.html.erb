<div class="container">
  <div class="challenge-card-title d-flex justify-content-start my-4">
    <h2><%= @challenge.title %></h2>
  </div>
</div>
<div class="container">
  <div class="row">
    <div class="col-12">
        <div class="challenge-card-btn d-flex justify-content-center align-items">
          <div class="card-challenge card-body-challenge d-flex justify-content-space-around mb-4 text-center">

              <p><%= @challenge.duration %> Days</p> <p><%= @challenge.points_by_step %>pts <%= image_tag('star (2).svg') %></p>

          </div>
        </div>
        <div class="card-challenge-content mt-4 pt-4">
          <p><%= @challenge.description %></p>
        </div>
    </div>
  </div>
</div>

