<section id="challenges" class="container-fluid d-flex flex-column bg-dark">
  <%= render 'shared/topnav' %>
  <section id="challengesTitle" class="row px-4 my-auto">
    <div class=" name col-10 offset-1 text-center">
    <h3 class=" text-white  text-uppercase ">Quizzes</span>
  </div>
</section>
</section>
<section id="quizzesContent" class="container-fluid d-flex page-content flex-column bg-white">
  <% if @quizzes.nil? %>

  <% else %>
    <div class="row ">
      <div class="col-12 text-center">
        Testez vos connaissances
      </div>
    </div>
    <div class="row mt-4">
      <% @quizzes.each do |quiz| %>
      <!-- CARTE QUIZ -->
      <div class="col-12 mb-2">
        <div id="reward" class="card p-2">
          <div class="d-flex justify-content-around align-items-center  text-center">
            <h4><%= quiz.title %></h4>
            <p><%= image_tag('star (2).svg') %> <small><%= quiz.points_by_question %> pts / Question </small> </p>
          </div>
          <div class="d-flex justify-content-around align-items-center  text-center">
            <%= quiz.description %>
          </div>
          <div class="col-12">
            <div class="pressbtnquiz">
              <%= link_to new_quiz_party_quiz_path(quiz.id), class: "" do %>
              <h4 class=" m-0 p-0">Participer <i class="fas fa-chevron-circle-right"></i></h4>
              <% end %>
            </div>
          </div>
          <div class="d-flex justify-content-around align-items-center  text-right">
            <small>
            Nombre de questions : <%= quiz.questions.count %>
            </small>
          </div>
        </div>
      </div>
      <% end %>
    </div>
  <% end %>
</section>

