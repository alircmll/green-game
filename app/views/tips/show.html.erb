<section id="tipsContent" class="container-fluid h-100 d-flex page-content flex-column bg-white">

  <div class="container">
    <div class="cta-over-section">
      <%= link_to "Add your  tip", new_tip_path, class: "btn btn-block btn-primary " %>
    </div>
        <div class="card my-4 scrollh">
          <div class="card-body ">
            <h5 class="card-title mb-0"><%= @tip.title %></h5>
            <small class="card-subtitle mt-n4 text-muted">Posted by: <%= @tip.user.username %></small>
            <p class="card-text mt-4"><%= @tip.description %></p>
            <div class="bottom-tip-card d-flex justify-content-space-between align-items-center ">
              <div class="voteForTip d-flex align-items-center ">
                <span><%= pluralize(@tip.votes.count, '') %></span>
                  <%= button_to tip_votes_path(@tip), method: :post, class: "like-btn" do %>
                    <i class="fa<%= @tip.votes.present? ? "s" : "r" %> fa-heart"></i>
                  <% end %>
                </div>
                <% if @tip.user == current_user %>
                  <%= button_to tip_path(@tip), method: :delete, class: "like-btn" do%>
                  <i class='fas fa-trash-alt'></i>
                <% end %>
              <% end %>
            </div>
          </div>
        </div>
      <div class="tipBtnBack d-flex justify-content-center">
        <div class="row">
           <%= link_to "<< Back", category_tips_path(@tip.category_id), class: "btn btn-block btn-primary" %>

          </div>
        </div>
      </div>
  </div>
</section>
